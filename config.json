{
  "name": "FaceInsight",
  "version": "1.0.0",
  "slug": "faceinsight",
  "description": "Face Recognition System with InsightFace for Home Assistant",
  "url": "https://github.com/anhnvme/faceinsight",
  "arch": ["amd64", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "ports": {
    "6080/tcp": null
  },
  "ports_description": {
    "6080/tcp": "Web UI (Configure custom port in options)"
  },
  "options": {
    "web_port": 6080,
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_topic": "faceinsight",
    "session_secret": "",
    "max_images_per_person": 10,
    "recognition_threshold": 0.4,
    "data_path": "/share/faceinsight",
    "inbox_path": "",
    "models_path": "",
    "use_custom_paths": false
  },
  "schema": {
    "web_port": "port",
    "mqtt_host": "str",
    "mqtt_port": "port",
    "mqtt_username": "str?",
    "mqtt_password": "password?",
    "mqtt_topic": "str",
    "session_secret": "str?",
    "max_images_per_person": "int(1,25)",
    "recognition_threshold": "float(0.1,0.9)",
    "data_path": "str",
    "inbox_path": "str?",
    "models_path": "str?",
    "use_custom_paths": "bool"
  },
  "image": "ghcr.io/{username}/faceinsight-addon-{arch}",
  "map": [
    "share:rw"
  ],
  "tmpfs": "size=512m",
  "environment": {
    "PYTHONUNBUFFERED": "1"
  }
}
