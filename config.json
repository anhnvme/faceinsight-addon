{
  "name": "FaceInsight",
  "version": "1.0.1",
  "slug": "faceinsight",
  "description": "Face Recognition System with InsightFace for Home Assistant",
  "url": "https://github.com/anhnvme/faceinsight",
  "arch": ["amd64", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "panel_icon": "mdi:face-recognition",
  "host_network": true,
  "ports_description": {
    "6080/tcp": "Web UI - Access via http://[HOST]:[web_port] (default 6080, change in options)"
  },
  "options": {
    "web_port": 6080,
    "data_path": "/share/faceinsight",
    "models_path": "",
    "inbox_path": ""
  },
  "schema": {
    "web_port": "port",
    "data_path": "str",
    "models_path": "str?",
    "inbox_path": "str?"
  },
  "image": "ghcr.io/anhnvme/faceinsight-{arch}",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "tmpfs": "size=512m",
  "environment": {
    "PYTHONUNBUFFERED": "1"
  }
}
